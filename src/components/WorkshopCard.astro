---
const { workshop } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow border border-gray-200">
  <div class="p-6">
    <div class="flex items-start justify-between mb-3">
      <h3 class="text-xl font-semibold text-gray-900 line-clamp-2">
        <a href={`/workshops/${workshop.slug}`} class="hover:text-yellow-600 transition-colors">
          {workshop.data.title}
        </a>
      </h3>
      {workshop.data.difficulty && (
        <span class={`px-2 py-1 rounded text-xs font-medium flex-shrink-0 ml-2 ${
          workshop.data.difficulty === 'Beginner' ? 'bg-green-100 text-green-800' :
          workshop.data.difficulty === 'Intermediate' ? 'bg-yellow-100 text-yellow-800' :
          'bg-red-100 text-red-800'
        }`}>
          {workshop.data.difficulty}
        </span>
      )}
    </div>
    
    {workshop.data.description && (
      <p class="text-gray-600 mb-4 line-clamp-3">{workshop.data.description}</p>
    )}
    
    <div class="space-y-2 text-sm text-gray-500 mb-4">
      <div class="flex items-center gap-2">
        <span class="font-medium">Date:</span>
        <time datetime={workshop.data.date.toISOString()}>
          {workshop.data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'short', 
            day: 'numeric' 
          })}
        </time>
      </div>
      
      {workshop.data.instructor && (
        <div class="flex items-center gap-2">
          <span class="font-medium">Instructor:</span>
          <span>{workshop.data.instructor}</span>
        </div>
      )}
      
      {workshop.data.duration && (
        <div class="flex items-center gap-2">
          <span class="font-medium">Duration:</span>
          <span>{workshop.data.duration}</span>
        </div>
      )}
    </div>

    {workshop.data.tags && workshop.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {workshop.data.tags.map((tag) => (
          <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
            {tag}
          </span>
        ))}
      </div>
    )}
    
    <a 
      href={`/workshops/${workshop.slug}`}
      class="inline-flex items-center text-yellow-600 hover:text-yellow-700 font-medium text-sm"
    >
      View Workshop â†’
    </a>
  </div>
</div>
